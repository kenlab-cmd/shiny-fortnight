// pairing.js - Simple device pairing code logic

const codes = {}; // In-memory store: deviceId => code

function generatePairingCode(deviceId) {
  const code = Math.floor(100000 + Math.random() * 900000).toString(); // 6-digit code
  codes[deviceId] = code;
  return code;
}

function verifyPairingCode(deviceId, code) {
  return codes[deviceId] === code;
}

module.exports = { generatePairingCode, verifyPairingCode };
